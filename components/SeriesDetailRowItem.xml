<?xml version="1.0" encoding="utf-8"?>
<component name="SeriesDetailRowItem" extends="Group">
  <interface>
    <field id="itemContent" type="node" onChange="onItemContentChanged" />
    <field id="itemHasFocus" type="boolean" onChange="onItemHasFocusChanged" />
  </interface>

  <children>
    <Poster
      id="cardBg"
      translation="[0, 0]"
      width="220"
      height="70"
      uri="pkg:/images/card.png"
    />

    <Poster
      id="focusRing"
      translation="[-3, -3]"
      width="226"
      height="76"
      uri="pkg:/images/field_focus.png"
      visible="false"
    />

    <Poster
      id="cover"
      translation="[5, 5]"
      width="210"
      height="60"
      loadDisplayMode="zoomToFill"
      uri=""
    />

    <Rectangle
      id="textOverlay"
      translation="[5, 46]"
      width="210"
      height="19"
      color="0xB00A111D"
    />

    <Label
      id="title"
      translation="[10, 48]"
      width="200"
      height="16"
      font="font:SmallSystemFont"
      color="0xE6EBF3"
      wrap="true"
      numLines="1"
      text=""
    />
  </children>

  <script type="text/brightscript" uri="pkg:/components/SeriesDetailRowItem.brs" />
</component>
