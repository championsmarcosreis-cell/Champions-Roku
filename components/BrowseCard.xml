      id="cardBg"
      translation="[0, 0]"
      width="1100"
      height="520"
      uri="pkg:/images/card.png"
    />

    <Label
      id="viewsTitle"
      translation="[40, 24]"
      width="440"
      height="34"
      font="font:MediumSystemFont"
      color="0xD8B765"
      text="Bibliotecas"
    />

    <Label
      id="itemsTitle"
      translation="[620, 24]"
      width="440"
      height="34"
      font="font:MediumSystemFont"
      color="0xD8B765"
      text="Recentes"
    />

    <MarkupList
      id="viewsList"
      translation="[40, 70]"
      itemSize="[440, 60]"
