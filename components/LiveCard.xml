<?xml version="1.0" encoding="utf-8"?>
<component name="LiveCard" extends="Group">
  <children>
    <Rectangle
      id="liveBgTop"
      translation="[0, 0]"
      width="1280"
      height="720"
      color="0x0A111D"
    />

    <Group
      id="liveBgGlow"
      translation="[80, 30]"
    >
      <Rectangle
        id="liveGlowRect"
        translation="[0, 0]"
        width="1120"
        height="640"
        color="0x171F2F"
        opacity="0.18"
      />
    </Group>

    <LayoutGroup
      id="liveLayout"
      translation="[20, 20]"
      layoutDirection="vert"
      itemSpacings="[0, 16]"
    >
      <LiveTvHeader id="liveHeader" />
      <LiveTvTimeline id="liveTimeline" />

      <LayoutGroup
        id="liveContentLayout"
        layoutDirection="horiz"
        itemSpacings="[20, 0]"
      >
        <LiveTvChannelCard id="liveChannelCard" />

        <Group
          id="liveTrackColumn"
          translation="[0, 0]"
        >
          <children>
            <Rectangle
              id="epgBg"
              translation="[0, 0]"
              width="650"
              height="330"
              color="0x111A2A"
            />

            <Rectangle
              id="liveTrackFocus"
              translation="[-4, -4]"
              width="658"
              height="338"
              color="0x2FD7B25C"
              visible="false"
            />

            <Label
              id="liveTrackTitle"
              translation="[20, 18]"
              width="610"
              height="28"
              font="font:MediumSystemFont"
              color="0xDCE6F4"
              text="Programacao"
            />

            <Group
              id="epgGroup"
              translation="[20, 56]"
            >
              <Group id="epgRows" translation="[0, 0]" />
            </Group>
          </children>
        </Group>

        <LiveTvLiveCta id="liveCta" />
      </LayoutGroup>
    </LayoutGroup>

    <MarkupList
      id="channelsList"
      translation="[-2000, -2000]"
      width="1"
      height="1"
      itemSize="[360, 92]"
      numRows="5"
      itemComponentName="LiveChannelItem"
      visible="false"
    />

    <Rectangle
      id="channelsBg"
      translation="[-2000, -2000]"
      width="1"
      height="1"
      color="0x00000000"
      visible="false"
    />

    <Label
      id="emptyLabel"
      translation="[20, 660]"
      width="1240"
      height="34"
      font="font:SmallSystemFont"
      horizAlign="center"
      color="0xAAB4C2"
      visible="false"
      text="Sem canais"
    />
  </children>
</component>
