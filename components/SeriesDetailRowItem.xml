<?xml version="1.0" encoding="utf-8"?>
<component name="SeriesDetailRowItem" extends="Group">
  <interface>
    <field id="itemContent" type="node" onChange="onItemContentChanged" />
    <field id="itemHasFocus" type="boolean" onChange="onItemHasFocusChanged" />
  </interface>

  <children>
    <Poster
      id="cardBg"
      translation="[0, 0]"
      width="340"
      height="190"
      uri="pkg:/images/card.png"
    />

    <Poster
      id="focusRing"
      translation="[-3, -3]"
      width="346"
      height="196"
      uri="pkg:/images/field_focus.png"
      visible="false"
    />

    <Poster
      id="cover"
      translation="[10, 10]"
      width="320"
      height="150"
      loadDisplayMode="zoomToFill"
      uri=""
    />

    <Label
      id="title"
      translation="[10, 166]"
      width="320"
      height="18"
      font="font:SmallSystemFont"
      color="0xE6EBF3"
      wrap="true"
      numLines="1"
      text=""
    />
  </children>

  <script type="text/brightscript" uri="pkg:/components/SeriesDetailRowItem.brs" />
</component>
