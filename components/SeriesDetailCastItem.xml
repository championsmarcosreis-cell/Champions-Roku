<?xml version="1.0" encoding="utf-8"?>
<component name="SeriesDetailCastItem" extends="Group">
  <interface>
    <field id="itemContent" type="node" onChange="onItemContentChanged" />
    <field id="itemHasFocus" type="boolean" onChange="onItemHasFocusChanged" />
  </interface>

  <children>
    <Poster
      id="cardBg"
      translation="[0, 0]"
      width="140"
      height="60"
      uri="pkg:/images/card.png"
    />

    <Poster
      id="focusRing"
      translation="[-3, -3]"
      width="146"
      height="66"
      uri="pkg:/images/field_focus.png"
      visible="false"
    />

    <Poster
      id="cover"
      translation="[6, 6]"
      width="48"
      height="48"
      loadDisplayMode="zoomToFill"
      uri=""
    />

    <Label
      id="title"
      translation="[60, 10]"
      width="72"
      height="40"
      font="font:SmallSystemFont"
      color="0xE6EBF3"
      wrap="true"
      numLines="2"
      text=""
    />
  </children>

  <script type="text/brightscript" uri="pkg:/components/SeriesDetailCastItem.brs" />
</component>
